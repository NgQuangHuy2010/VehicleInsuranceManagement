@model IEnumerable<Project3.Models.VehicleWarranty>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/System/Views/Layout/LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WarrantyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WarrantyDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WarrantyDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WarrantyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarrantyDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarrantyDetails)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WarrantyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WarrantyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WarrantyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
