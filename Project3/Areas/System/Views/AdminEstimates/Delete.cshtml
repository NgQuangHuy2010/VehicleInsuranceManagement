@model Project3.Models.Estimate
@{
    ViewData["Title"] = "Delete Estimate";
    Layout = "~/Areas/System/Views/Layout/LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Estimate Number:</label>
                        <p>@Model.EstimateNumber</p>
                    </div>
                    <div class="form-group">
                        <label>Vehicle:</label>
                        <p>@Model.Vehicle.VehicleName</p>
                    </div>
                    <div class="form-group">
                        <label>Policy Type:</label>
                        <p>@Model.PolicyType.PolicyName</p>
                    </div>
                    <div class="form-group">
                        <label>Warranty:</label>
                        <p>@Model.Warranty.WarrantyType</p>
                    </div>
                    <div class="form-group">
                        <label>Estimated Cost:</label>
                        <p>@Model.VehicleRate</p>
                    </div>
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="EstimateNumber" />
                        <div class="alert alert-danger" role="alert">
                            Are you sure you want to delete this estimate?
                        </div>
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

