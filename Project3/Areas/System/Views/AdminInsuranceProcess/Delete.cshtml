@model Project3.ModelsView.InsuranceProcessViewModel
@{
    ViewData["Title"] = "Delete Insurance Process";
    Layout = "~/Areas/System/Views/Layout/LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Customer Name:</label>
                        <p>@Model.CustomerName</p>
                    </div>
                    <div class="form-group">
                        <label>Customer Phone Number:</label>
                        <p>@Model.CustomerPhoneNumber</p>
                    </div>
                    <div class="form-group">
                        <label>Vehicle Name:</label>
                        <p>@Model.VehicleName</p>
                    </div>
                    <div class="form-group">
                        <label>Vehicle Model:</label>
                        <p>@Model.VehicleModel</p>
                    </div>
                    <div class="form-group">
                        <label>Vehicle Rate:</label>
                        <p>@Model.VehicleRate</p>
                    </div>
                    <div class="form-group">
                        <label>Policy Number:</label>
                        <p>@Model.PolicyNumber</p>
                    </div>
                    <div class="form-group">
                        <label>Policy Date:</label>
                        <p>@Model.PolicyDate</p>
                    </div>
                    <div class="form-group">
                        <label>Policy Duration (Months):</label>
                        <p>@Model.PolicyDuration</p>
                    </div>
                    <div class="form-group">
                        <label>Vehicle Body Number:</label>
                        <p>@Model.VehicleBodyNumber</p>
                    </div>
                    <div class="form-group">
                        <label>Vehicle Engine Number:</label>
                        <p>@Model.VehicleEngineNumber</p>
                    </div>
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="PolicyNumber" />
                        <div class="alert alert-danger" role="alert">
                            Are you sure you want to delete this insurance process?
                        </div>
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="@Url.Action("Index", "Dashboard", new { area = "System" })" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
