@model Project3.ModelsView.InsuranceProductViewModel
@{
    ViewData["Title"] = "Insurance Product Details";
    Layout = "~/Areas/System/Views/Layout/LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Policy Name:</label>
                        <p>@Model.PolicyName</p>
                    </div>
                    <div class="form-group">
                        <label>Policy Details:</label>
                        <p>@Model.PolicyDetails</p>
                    </div>
                    <div class="form-group">
                        <label>Vehicle Rate:</label>
                        <p>@Model.VehicleRate</p>
                    </div>
                    <div class="form-group">
                        <label>Warranty Type:</label>
                        <p>@Model.WarrantyType</p>
                    </div>
                    <div class="form-group">
                        <label>Warranty Duration:</label>
                        <p>@Model.WarrantyDuration</p>
                    </div>
                    <div class="form-group">
                        <label>Warranty Details:</label>
                        <p>@Model.WarrantyDetails</p>
                    </div>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
