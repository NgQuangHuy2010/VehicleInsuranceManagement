@model IEnumerable<Project3.Models.VehicleInformation>

@{
    ViewData["Title"] = "Vehicle Information";
    Layout = "~/Views/LayoutUser/LayoutUser.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">Vehicle Information</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleModel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleVersion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleRate)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleVersion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleRate)
                    </td>
                    <td>
                        <a asp-controller="VehicleInformation" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a>

                        <a asp-controller="VehicleInformation" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-controller="VehicleInformation" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
