@model Project3.ModelsView.CollectInfoViewModel

@{
    ViewData["Title"] = "Collect Insurance Information";
    Layout = "~/Views/LayoutUser/LayoutUser.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Estimation</h1>
    
        <form asp-action="CollectInfo" method="post">
        <div class="row">
            <!-- Left Column for Dropdowns -->
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="VehicleRate" class="control-label"></label>
                <input asp-for="VehicleRate" class="form-control" />
                <span asp-validation-for="VehicleRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverAge" class="control-label"></label>
                <input asp-for="DriverAge" class="form-control" />
                <span asp-validation-for="DriverAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverGender" class="control-label"></label>
                <select asp-for="DriverGender" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="DriverGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrivingHistory" class="control-label"></label>
                <input asp-for="DrivingHistory" class="form-control" />
                <span asp-validation-for="DrivingHistory" class="text-danger"></span>
            </div>
            </div>
            <!-- Right Column for Text Inputs -->
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CustomerAdd" class="control-label"></label>
                <select asp-for="CustomerAdd" class="form-control">
                    <option value="Urban">Urban</option>
                    <option value="Rural">Rural</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Usage" class="control-label"></label>
                <select asp-for="Usage" class="form-control">
                    <option value="">Select Usage</option>
                    <option value="Daily">Daily</option>
                    <option value="Occasional">Occasional</option>
                </select>
                <span asp-validation-for="Usage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AntiTheftDevice" class="control-label"></label>
                <input asp-for="AntiTheftDevice" type="checkbox" class="form-check-input" />
                <span asp-validation-for="AntiTheftDevice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MultiPolicy" class="control-label"></label>
                <input asp-for="MultiPolicy" type="checkbox" class="form-check-input" />
                <span asp-validation-for="MultiPolicy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SafeDriver" class="control-label"></label>
                <input asp-for="SafeDriver" type="checkbox" class="form-check-input" />
                <span asp-validation-for="SafeDriver" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                    <a asp-controller="Estimate" asp-action="Create" class="btn btn-primary">Back</a>
            </div>
                
            </div>
        </div>
        </form>
        
    </div>
</div>

