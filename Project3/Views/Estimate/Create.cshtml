@model Project3.Models.Estimate

@{
    ViewData["Title"] = "Create Estimate";
    Layout = "~/Views/LayoutUser/LayoutUser.cshtml";
}

<h1>Create Estimate</h1>

<h4>Estimate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Vehicle Information -->
            <div class="form-group">
                <label asp-for="VehicleName" class="control-label"></label>
                <input asp-for="VehicleName" class="form-control" value="@Model.VehicleName" />
                <span asp-validation-for="VehicleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleModel" class="control-label"></label>
                <input asp-for="VehicleModel" class="form-control" value="@Model.VehicleModel" />
                <span asp-validation-for="VehicleModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleVersion" class="control-label"></label>
                <input asp-for="VehicleVersion" class="form-control" value="@Model.VehicleVersion" />
                <span asp-validation-for="VehicleVersion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleRate" class="control-label"></label>
                <input asp-for="VehicleRate" class="form-control" value="@Model.VehicleRate" />
                <span asp-validation-for="VehicleRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleBodyNumber" class="control-label"></label>
                <input asp-for="VehicleBodyNumber" class="form-control" value="@Model.VehicleBodyNumber" />
                <span asp-validation-for="VehicleBodyNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleEngineNumber" class="control-label"></label>
                <input asp-for="VehicleEngineNumber" class="form-control" value="@Model.VehicleEngineNumber" />
                <span asp-validation-for="VehicleEngineNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleNumber" class="control-label"></label>
                <input asp-for="VehicleNumber" class="form-control" value="@Model.VehicleNumber" />
                <span asp-validation-for="VehicleNumber" class="text-danger"></span>
            </div>

            <!-- Driver Information -->
            <div class="form-group">
                <label asp-for="DriverAge" class="control-label"></label>
                <input asp-for="DriverAge" class="form-control" />
                <span asp-validation-for="DriverAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverGender" class="control-label"></label>
                <select asp-for="DriverGender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="DriverGender" class="text-danger"></span>
            </div>

            <!-- Location and Usage -->
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" class="form-control">
                    <option value="Urban">Urban</option>
                    <option value="Suburban">Suburban</option>
                    <option value="Rural">Rural</option>
                </select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usage" class="control-label"></label>
                <select asp-for="Usage" class="form-control">
                    <option value="Daily">Daily</option>
                    <option value="Occasional">Occasional</option>
                    <option value="Business">Business</option>
                </select>
                <span asp-validation-for="Usage" class="text-danger"></span>
            </div>

            <!-- Additional Features -->
            <div class="form-group">
                <label asp-for="AntiTheftDevice" class="control-label"></label>
                <input asp-for="AntiTheftDevice" class="form-control" />
                <span asp-validation-for="AntiTheftDevice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCoverages" class="control-label"></label>
                <select asp-for="SelectedCoverages" class="form-control" multiple>
                    <option value="Liability">Liability</option>
                    <option value="Collision">Collision</option>
                    <option value="Comprehensive">Comprehensive</option>
                </select>
                <span asp-validation-for="SelectedCoverages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrivingHistory" class="control-label"></label>
                <input asp-for="DrivingHistory" class="form-control" />
                <span asp-validation-for="DrivingHistory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MultiPolicy" class="control-label"></label>
                <input asp-for="MultiPolicy" class="form-control" />
                <span asp-validation-for="MultiPolicy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SafeDriver" class="control-label"></label>
                <input asp-for="SafeDriver" class="form-control" />
                <span asp-validation-for="SafeDriver" class="text-danger"></span>
            </div>

            <!-- Warranty and Policy Type -->
            <div class="form-group">
                <label asp-for="VehicleWarranty" class="control-label"></label>
                <select asp-for="VehicleWarranty" class="form-control">
                    <option value="Manufacturer">Manufacturer</option>
                    <option value="Extended">Extended</option>
                    <option value="None">None</option>
                </select>
                <span asp-validation-for="VehicleWarranty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehiclePolicyType" class="control-label"></label>
                <select asp-for="VehiclePolicyType" class="form-control">
                    <option value="Comprehensive">Comprehensive</option>
                    <option value="ThirdParty">Third Party</option>
                    <option value="ThirdPartyFireTheft">Third Party, Fire and Theft</option>
                </select>
                <span asp-validation-for="VehiclePolicyType" class="text-danger"></span>
            </div>

            <!-- Estimated Cost -->
            <div class="form-group">
                <label asp-for="EstimatedCost" class="control-label"></label>
                <input asp-for="EstimatedCost" class="form-control" readonly />
                <span asp-validation-for="EstimatedCost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

