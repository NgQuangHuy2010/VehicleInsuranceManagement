@{
    ViewData["Title"] = "Company Billing Policy";
    Layout = "~/Views/LayoutUser/LayoutUser.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    .payment-option {
        margin-top: 50px;
    }

    .card {
        cursor: pointer;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-body {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card img {
        max-width: 100px;
        margin-right: 20px;
    }

    .card-title {
        font-size: 1.5rem;
    }
</style>
<div class="container payment-option">
    <h2 class="text-center">Select Payment Option</h2>
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card" >
                <div class="card-body">
                    <img src="https://www.paypalobjects.com/webstatic/icon/pp258.png" alt="PayPal">
                    <h5 class="card-title"><a asp-controller="CompanyBillingPolicy" asp-action="PaymentWithPaypal">Pay with PayPal</a></h5>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card" >
                <div class="card-body">
                    <img src="https://upload.wikimedia.org/wikipedia/vi/f/fe/MoMo_Logo.png" alt="Momo">
                    
                    <form asp-action="MomoPayment" method="post">
                        <h5 class="card-title">
                            <button type="submit">Pay with MoMo</button>
                        </h5>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


